extends layout.pug

block navbar
  include navbar.pug

block hero
  .hero
    .hero-body
      .container
        .title Nuestros productos
        

block content
  .container(style="flex:1;padding:50px 0;")
    .columns.is-multiline
      each value in body
        .column.is-one-quarter
          .card
            .card-image
              figure.image(style="height:300px")              
                img(src=value.image style="height: 100%; object-fit: cover")
            .card-content
              h1.title=`${value.brand} `
              span.subtitle=`Size ${value.size}`
                .subtitle= `${value.description}`
              .button.is-fullwidth.is-link
                span.icon
                  i.fas.fa-shopping-cart
                span Add to cart                
                  strong= `$ ${value.price}`
